<UserControl x:Class="Chatterbox.Controls.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Image x:Name="ProfileIcon" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Source="{StaticResource ImgUnknown}"/>
        <TextBlock x:Name="UsernameText" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock x:Name="MessageText" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock x:Name="TimeText" Grid.Column="6" Grid.Row="1" VerticalAlignment="Center"/>
    </Grid>
</UserControl>