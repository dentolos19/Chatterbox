<mahApps:MetroWindow x:Class="Chatterbox.Graphics.WnSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Chatterbox Settings" Width="500" Height="300" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   Height="50">
            <Image Source="/Resources/Logo.png"
                   Margin="10,10,0,10"
                   Width="30"/>
            <Button Content="Save"
                    DockPanel.Dock="Right"
                    Margin="0,10,10,10"
                    Width="75"
                    Click="Save"/>
            <Label Content="Chatterbox Settings"
                   Margin="10,10,10,10"
                   VerticalContentAlignment="Center"/>
        </DockPanel>
        <StackPanel>
            <DockPanel Margin="10,10,10,0">
                <Label Content="Username" VerticalContentAlignment="Center" Width="75"/>
                <TextBox x:Name="UsernameBox" VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
    </DockPanel>
</mahApps:MetroWindow>