<Window x:Class="Chatterbox.Graphics.WnSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatterbox Settings" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Loaded="InitializeCfgs">
    <DockPanel Width="300">
        <DockPanel DockPanel.Dock="Top" Height="50" Background="WhiteSmoke">
            <Image Width="30" Margin="10,10,0,10" Source="/Resources/Icon.ico"/>
            <Button DockPanel.Dock="Right" Content="Save" Width="75" Margin="0,10,10,10" Click="Save"/>
            <Label Content="Chatterbox Settings" VerticalContentAlignment="Center" FontSize="16"/>
        </DockPanel>
        <StackPanel>
            <DockPanel Margin="10,10,10,10">
                <Label Content="Username" VerticalContentAlignment="Center" Width="100"/>
                <TextBox x:Name="CfgUsername" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel Margin="10,0,10,10">
                <Label Content="Hosting Port" VerticalContentAlignment="Center" Width="100"/>
                <TextBox x:Name="CfgHostingPort" VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
    </DockPanel>
</Window>